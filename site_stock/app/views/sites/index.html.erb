<h1>Listing sites</h1>


<table>
  <tr>
    <th>Cod site</th>
    <th>Nom site</th>
    <th>Acceso</th>
    <th>Coordenadas</th>
    <th>Id isla</th>
    <th>Descripcion</th>
    <th>Zona</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sites.each do |site| %>
  <tr>
    <td><%= site.COD_SITE %></td>
    <td><%= site.NOM_SITE %></td>
    <td><%= site.ACCESO %></td>
    <td><%= site.COORDENADAS %></td>
    <td><%= site.ID_ISLA %></td>
    <td><%= site.DESCRIPCION %></td>
    <td><%= site.ZONA %></td>
    <td><%= link_to 'Show', site %></td>
    <td><%= link_to 'Edit', edit_site_path(site) %></td>
    <td><%= link_to 'Destroy', site, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

